{
  "name": "@formsort/constants",
  "version": "1.6.0",
  "description": "Constants used across Formsort projects. Not intended to be used directly",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "format": "eslint --ext .ts,.tsx src --fix",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest",
    "pack": "yarn pack",
    "release": "craft prepare --publish"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formsort/oss.git"
  },
  "author": "Fil Zembowicz <fil@formsort.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.6.3",
    "eslint": "^8.12.0"
  },
  "jest": {
    "cacheDirectory": "./.jest-cache",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
